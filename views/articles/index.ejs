<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head.ejs") %>
  <body>
    <!-- Navbar -->
    <%- include("../partials/nav.ejs")%>

    <!-- Main Section -->
    <main class="hero">
      <div class="container">
        <!-- Popular Articles -->
        <section class="popular-articles">
          <div class="article card">
            <div class="info flex">
              <div class="top">
                <a href="">Javascript</a>
